{
  "manifest_version": 2,

  "name": "dataslayer",
  "description": "Debug and test Google Tag Manager and analytics implementations.",
  "version": "0.8.5",
  "short_name": "dataslayer",

  "icons":{"48":"i48.png","128":"i128.png"},

  "devtools_page": "devtools.html",
  "options_page": "options.html",

  "background": {
    "scripts": ["event.js"],
    "persistent": false
  },
  
  "permissions": [ "tabs", "storage", "http://*/*", "https://*/*", "notifications","declarativeWebRequest" ]
}