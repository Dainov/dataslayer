{
  "manifest_version": 2,

  "name": "dataslayer",
  "description": "Debug and test Google Tag Manager and Google Analytics implementations.",
  "version": "0.7",
  "short_name": "dataslayer",

  "icons":{"48":"i48.png","128":"i128.png"},

  "devtools_page": "devtools.html",
  "options_page": "options.html",

  "content_scripts": [
  {
    "matches": ["http://*/*", "https://*/*"],
    "js": ["data-layer-helper.js","content.js"]
    // "run_at": "document_start"
  }
  ],

  "background": {
    "scripts": ["event.js"],
    "persistent": false
  },
  
  "permissions": [ "tabs", "storage", "http://*/*", "https://*/*" ]
}